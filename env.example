# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/index-rebalancer.db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=30d

# NEAR Intents 1Click API
NEAR_INTENTS_API_URL=https://1click.chaindefuser.com
NEAR_INTENTS_API_KEY=your-near-intents-api-key-optional

# Price Oracle (CoinGecko)
COINGECKO_API_KEY=your-coingecko-api-key-optional
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Wallet Encryption
WALLET_ENCRYPTION_KEY=your-32-character-encryption-key-change-this

# Background Jobs
DRIFT_MONITOR_ENABLED=true
DRIFT_MONITOR_SCHEDULE=*/5 * * * *  # Every 5 minutes (cron format)
# Cron format: minute hour day month weekday
# Examples:
#   */5 * * * *    = Every 5 minutes
#   0 * * * *      = Every hour
#   0 */6 * * *    = Every 6 hours
#   0 0 * * *      = Daily at midnight
#   0 9 * * 1-5    = Weekdays at 9am

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000  # 1 hour
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE=./logs/app.log

# Webhooks
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_RETRY_ATTEMPTS=3

